{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": [
    {
      "target": "app",
      "public": "public",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        ".env"
      ],
      "rewrites": [
        {
          "source": "/auth/**",
          "function": "webUi"
        },
        {
          "source": "/api/**",
          "function": "webUi"
        }
      ]
    },
    {
      "target": "api",
      "public": "public",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        ".env"
      ],
      "rewrites": [
        {
          "source": "/**",
          "function": "webUi"
        }
      ]
    }
  ]
}
